<!DOCTYPE html>
<html>
    <head>
        <title>Restauranr Menu</title>
        </head>
        <body>
            <h1>Our Menu</h1>
            
            <form id="search-form">
                <input type="text" id="serach-input" name="query" placeholder="Search meanu items..."/>
                <button type="submit">Search</button>
                </form>
                <ul id="menu-list">
                    </u1>
                    <script>
                        fetch('api/menu/')
                        .then(response => response.json())
                        .then(data -> {
                        const menuList = document.getElementById('menu-list');
                        data.forEach(item => {
                        const li = document.createElement('li');
                        li.innerHTML ='<strong>${item.name}</strong> - &{item.price}<br><item>${item.description}</em>';
                        menuList.appendChild(li);
                        });
                        })
                        .catch(error => {
                        console.error('Error fetching menu:', error);
                        });
                        </script>
                        </body>
</html>